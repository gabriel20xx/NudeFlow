{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "standard"
  ],
  "overrides": [
    {
      "files": ["src/public/js/**/*.js"],
      "env": { "browser": true, "es2021": true }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error", "info", "debug"] }],
    "prefer-const": "warn"
  }
}
