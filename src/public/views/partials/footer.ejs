<script>
 // Ensure bottom nav always visible by adjusting padding if viewport changes / orientation
 (function(){
	 function adjustPadding(){
		 const nav=document.querySelector('.bottom-nav');
		 if(!nav) return; document.body.style.paddingBottom = nav.getBoundingClientRect().height + 'px';
	 }
	 window.addEventListener('resize', adjustPadding);
	 window.addEventListener('orientationchange', adjustPadding);
	 document.addEventListener('DOMContentLoaded', adjustPadding);
 })();
</script>
