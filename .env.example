# Environment Configuration for XXXTok
# Copy this file to .env and adjust values as needed

# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000

# Path Configuration (adjust according to your setup)
MEDIA_PATH=./media
MODELS_PATH=./models

# Security Configuration
CORS_ORIGIN=*
MAX_FILE_SIZE=10485760

# Feature Flags
ENABLE_DYNAMIC_ROUTES=true
ENABLE_SEARCH=true
ENABLE_PROFILES=true
ENABLE_DEBUG_LOGGING=true

# Development/Production Mode
NODE_ENV=development

# Git Repository (used by external Docker setup)
GIT_REPO=https://github.com/gabriel20xx/XXXTok.git
