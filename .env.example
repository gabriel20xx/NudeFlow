# Environment Configuration for NudeFlow
# Copy this file to .env and adjust values as needed

# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000

# Path Configuration (relative to project root using ../)
MEDIA_PATH=../media
MODELS_PATH=../models

# Security Configuration
CORS_ORIGIN=*
MAX_FILE_SIZE=10mb

# Feature Flags
ENABLE_DYNAMIC_ROUTES=true
ENABLE_SEARCH=true
ENABLE_PROFILES=true
ENABLE_DEBUG_LOGGING=true

# Cache Settings (in milliseconds)
MEDIA_SCAN_INTERVAL=300000

# Development/Production Mode
NODE_ENV=development

# Git Repository (used by external Docker setup)
GIT_REPO=https://github.com/gabriel20xx/NudeFlow.git
